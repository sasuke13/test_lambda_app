{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "FastAPI Lambda function configuration",
  "Parameters": {
    "env": {
      "Type": "String"
    }
  },
  "Resources": {
    "LambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "deploymentBucket"
          },
          "S3Key": "amplify-builds/fastapi-${env}-latest.zip"
        },
        "Handler": "src.main.handler",
        "Runtime": "python3.11",
        "Timeout": 30,
        "MemorySize": 256,
        "Environment": {
          "Variables": {
            "ENV": {
              "Ref": "env"
            }
          }
        }
      }
    }
  }
} 